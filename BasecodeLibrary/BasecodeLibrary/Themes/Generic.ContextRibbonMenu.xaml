<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:controls="using:BasecodeLibrary.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BasecodeLibrary.Themes">

    <Style TargetType="controls:ContextRibbonMenu">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                        <ComboBox 
                            HorizontalAlignment="Stretch" 
                            HorizontalContentAlignment="Stretch" 
                            VerticalAlignment="Center" 
                            BorderThickness="1"
                            Width="Auto"
                            Padding="10" 
                            Margin="10"
                            ItemsSource="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=ContentItems}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>
</ResourceDictionary>
